<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/kayitresim"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Spinner
            android:id="@+id/Unvan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
          android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="center"
            ></Spinner>

        <EditText
            android:id="@+id/AdSoyad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:drawableRight="@drawable/ic_account_circle_black"
            android:hint="Ad Soyad"
            android:gravity="center"
            ></EditText>


        <EditText
            android:id="@+id/emailKayit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:drawableRight="@drawable/ic_email_black"
            android:hint="email"
            android:gravity="center"

            ></EditText>

        <EditText
            android:id="@+id/passwordKayit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="180dp"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:inputType="textPassword"
            android:ems="10"
            android:gravity="center"
            android:hint="Şifre"
            ></EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnKayit"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="90dp"
                android:text="Kayıt Ol"

                ></Button>
            <Button
                android:id="@+id/btnGeri"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="230dp"
                android:text="Geri Dön"

                ></Button>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>