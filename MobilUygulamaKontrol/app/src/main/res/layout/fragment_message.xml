<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan">

    <TextView
        android:id="@+id/etTarih"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="250dp"
        android:textColor="#ffff"
        android:gravity="center"

        ></TextView>

    <TextView
        android:id="@+id/saatBilgisi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:textColor="#ffff"></TextView>

    <TextView

        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/kocaelilogo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"></TextView>

   <EditText
       android:id="@+id/mesajYaz"
       android:layout_width="300dp"
       android:layout_height="100dp"
       android:layout_centerHorizontal="true"
      android:layout_marginTop="160dp"
       android:hint="mesaj yaz"
       android:background="@drawable/mesaj_kutusu"
       android:gravity="center"
       ></EditText>

    <Spinner
        android:id="@+id/spinnerSaat"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:outlineSpotShadowColor="#ffff"
        android:background="@drawable/mesaj_kutusu"
        android:outlineAmbientShadowColor="#000000"
        android:gravity="center"
        android:textAlignment="center"


        ></Spinner>



    <Button
        android:id="@+id/btnMesajGonder"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:text="GÃ¶nder"
        android:background="@drawable/mesaj_kutusu"
        android:layout_centerHorizontal="true"></Button>




</RelativeLayout>